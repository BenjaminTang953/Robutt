    EndWhile
    FourMotorsBreak()
EndSub

Sub fAdjustment 'Adjustment off front wall
    moveDist = knownDistFront - fDist
    If fDist > knownDistFront Then
        neg = 1
    Else
        neg = -1
    EndIf
    While moveDist > 0
        MotorMoveSync()
        moveDist = knownDistFront - fDist
    EndWhile
    FourMotorsBreak()
EndSub  


