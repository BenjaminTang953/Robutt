Sub rlAdjustment 'Adjustment by left and right wall
    If lDist > rDist Then
        While lDist > rDist
            neg = 1
            MotorMoveSide()
        EndWhile
        FourMotorsBreak()
    Else
        While lDist < rDist 
            neg = -1
            FourMotorMoveSide()
        EndWhile   
        4MotorsBreak
    EndIf
EndSub

Sub rAdjustment 'Adjustment off right wall
    moveDist = knownDistSide - rDist
    If rDist > knownDistSide Then
        neg = 1
    Else
        neg = -1
    EndIf
    While moveDist > 0 
        MotorMoveSide()
        moveDist = knownDistSide - rDist
    EndWhile
    FourMotorsBreak()
EndSub

Sub lAdjustment 'Adjustment off left wall
    moveDist = knownDistSide - lDist
